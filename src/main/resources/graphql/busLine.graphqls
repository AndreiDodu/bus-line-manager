type BusLine {

    id: ID!
    name: String!
}

input BusLineInsertInput {
    name: String!
}

extend type Query {
    getBusLine(id: ID!): BusLine
	getBusLines: [BusLine]
}

extend type Mutation{
	insertBusLine(data: BusLineInsertInput!): BusLine!
	updateBusLine(id: ID!, data: BusLineInsertInput!): BusLine!
	deleteBusLine(id: ID!): Boolean!
}