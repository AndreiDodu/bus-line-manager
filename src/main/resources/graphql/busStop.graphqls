type BusStop {

    id: ID!
    name: String!
}

input BusStopInsertInput {
    name: String!
}

extend type Query {
    getBusStop(id: ID!): BusStop
	getBusStops: [BusStop]
}

extend type Mutation{
	insertBusStop(data: BusStopInsertInput!): BusStop!
	updateBusStop(id: ID!, data: BusStopInsertInput!): BusStop!
}